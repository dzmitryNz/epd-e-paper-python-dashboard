{
    "display": {
        "epdDisplayType": "epd2in15g",
        "epdDisplayWidth": 296,
        "epdDisplayHeight": 160,
        "epdDisplayRotation": 0,
        "epdDisplayInvert": false,
        "epdDisplayBrightness": 100,
        "epdDisplayContrast": 100,
        "epdDisplaySaturation": 100,
        "epdDisplayHue": 100,
        "epdDisplayGamma": 100,
        "epdColourMode": "RGB",
        "colours": [
            "WHITE",
            "BLACK",
            "RED",
            "YELLOW"
        ],
        "epdColourBlack": "BLACK",
        "epdColourWhite": "WHITE",
        "epdColourRed": "RED",
        "epdColourYellow": "YELLOW",
        "oldDataColour": "YELLOW"
    },
    "fonts": {
        "font15": [
            "Font.ttc",
            15
        ],
        "font18": [
            "Font.ttc",
            18
        ],
        "font24": [
            "Font.ttc",
            24
        ],
        "font40": [
            "Font.ttc",
            40
        ]
    },
    "layout": {
        "lineHeight": 22,
        "startX": 5,
        "iconsPath": "./icons/"
    },
    "services": {
        "kucoin": {
            "url": "https://api.kucoin.com/api/v1/market/allTickers",
            "responseType": "json",
            "pairs": [
                "BTC-USDC",
                "LTC-USDC",
                "LINK-USDC",
                "SOL-USDC"
            ],
            "refreshInterval": 600000,
            "data": {
                "BTC-USDC": {
                    "path": "last",
                    "type": "int"
                },
                "LTC-USDC": {
                    "path": "last",
                    "type": "int"
                },
                "LINK-USDC": {
                    "path": "last",
                    "type": "float",
                    "round": 2
                },
                "SOL-USDC": {
                    "path": "last",
                    "type": "float",
                    "round": 2
                }
            }
        },
        "weather": {
            "url": "https://api.openweathermap.org/data/2.5/weather?units=metric",
            "responseType": "json",
            "params": {
                "q": "Mogilev",
                "lang": "be",
                "appid": "env.OPENWEATHERMAP_API_KEY"
            },
            "refreshInterval": 600000,
            "data": {
                "temp": {
                    "path": "main.temp",
                    "type": "float",
                    "round": 2
                },
                "feels_like": {
                    "path": "main.feels_like",
                    "type": "float",
                    "round": 2
                },
                "humidity": {
                    "path": "main.humidity",
                    "type": "int"
                },
                "pressure": {
                    "path": "main.pressure",
                    "type": "int"
                },
                "wind_speed": {
                    "path": "wind.speed",
                    "type": "float",
                    "round": 2
                },
                "wind_deg": {
                    "path": "wind.deg",
                    "type": "int"
                },
                "clouds": {
                    "path": "clouds.all",
                    "type": "int"
                },
                "description": {
                    "path": "weather[0].description",
                    "type": "string"
                },
                "sunrise": {
                    "path": "sys.sunrise",
                    "type": "int"
                },
                "sunset": {
                    "path": "sys.sunset",
                    "type": "int"
                },
                "weather_icon": {
                    "path": "weather[0].icon",
                    "type": "string"
                }
            }
        },
        "wifiiot_sensors_1": {
            "url": "http://192.168.0.106/sensors",
            "responseType": "text",
            "refreshInterval": 600000,
            "data": {
                "dsw1": {
                    "path": "dsw1",
                    "type": "float",
                    "round": 2
                },
                "dsw2": {
                    "path": "dsw2",
                    "type": "float",
                    "round": 2
                }
            }
        },
        "wifiiot_sensors_2": {
            "url": "http://192.168.0.100/sensors",
            "responseType": "text",
            "refreshInterval": 600000,
            "data": {
                "bmpt": {
                    "path": "bmpt",
                    "type": "float",
                    "round": 2
                },
                "bmpp": {
                    "path": "bmpp",
                    "type": "float",
                    "round": 2
                }
            }
        }
    },
    "dashboard": {
        "lines": [
            {
                "name": "datetime",
                "startY": 0,
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "datetime",
                        "format": "%a - %d %b - %H:%M",
                        "font": "font24",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "weather_icon",
                        "prefix": "",
                        "suffix": "",
                        "font": "icons",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            },
            {
                "name": "sun_times",
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "sunrise",
                        "prefix": "↑",
                        "format": "%H:%M",
                        "suffix": "",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "sunset",
                        "prefix": "↓",
                        "format": "%H:%M",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "description",
                        "prefix": " ",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            },
            {
                "name": "weather_sensors",
                "startY": 47,
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "dsw1",
                        "prefix": "Out, °C:",
                        "suffix": " ",
                        "font": "font24",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "feels_like",
                        "prefix": "feels",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "temp",
                        "prefix": " ",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            },
            {
                "type": "weather_details",
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "humidity",
                        "prefix": "Hum, %:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "YELLOW",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "wind_speed",
                        "prefix": "Wind, ms:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "wind_direction",
                        "prefix": " ",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            },
            {
                "type": "pressure_clouds",
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "bmpp",
                        "prefix": "Press, hPa:",
                        "suffix": " ",
                        "font": "font24",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "clouds",
                        "prefix": "Вобл, %:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "BLACK",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            },
            {
                "type": "balcony_bk_temps",
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "dsw2",
                        "prefix": "Bal, °C:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "bmpt",
                        "prefix": "BK, °C:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            },
            {
                "type": "crypto_prices",
                "startX": 5,
                "afterY": 30,
                "items": [
                    {
                        "type": "BTC-USDC",
                        "prefix": "BTC, USDC:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "LTC-USDC",
                        "prefix": "LTC, USDC:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "LINK-USDC",
                        "prefix": "LINK, USDC:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    },
                    {
                        "type": "SOL-USDC",
                        "prefix": "SOL, USDC:",
                        "suffix": " ",
                        "font": "font18",
                        "colour": "RED",
                        "startY": 0,
                        "beforeX": 0
                    }
                ]
            }
        ]
    }
}