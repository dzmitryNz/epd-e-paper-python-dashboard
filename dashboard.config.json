{
    "display": {
        "epdDisplayType": "epd2in15g",
        "epdDisplayWidth": 200,
        "epdDisplayHeight": 200,
        "epdDisplayRotation": 0,
        "epdDisplayInvert": false,
        "epdDisplayBrightness": 100,
        "epdDisplayContrast": 100,
        "epdDisplaySaturation": 100,
        "epdDisplayHue": 100,
        "epdDisplayGamma": 100,
        "epdColourMode": "RGB",
        "colours": [
            "epdColourBlack",
            "epdColourWhite",
            "epdColourRed",
            "epdColourYellow"
        ],
        "epdColourBlack": "BLACK",
        "epdColourWhite": "WHITE",
        "epdColourRed": "RED",
        "epdColourYellow": "YELLOW"
    },
    "fonts": {
        "font15": ["Font.ttc", 15],
        "font18": ["Font.ttc", 18],
        "font24": ["Font.ttc", 24],
        "font40": ["Font.ttc", 40]
    },
    "layout": {
        "lineHeight": 22,
        "startX": 5,
        "iconsPath": "./icons/"
    },
    "sensors": {
        "showSensorNames": ["dsw1", "dsw2", "bmpt", "bmpp"],
        "sensorNames": {
            "dsw1": "Out",
            "dsw2": "Bal",
            "bmpt": "BK",
            "bmpp": "Prs"
        },
        "sensorUnits": {
            "dsw1": "°C",
            "dsw2": "°C",
            "bmpt": "°C",
            "bmpp": "hPa"
        },
        "valuePositions": {
            "dsw1": 80,
            "dsw2": 70,
            "bmpt": 120,
            "bmpp": 95
        },
        "weatherPositions": {
            "dsw1": 120,
            "humidity": 80,
            "wind_speed": 110,
            "pressure": 170,
            "description": 120
        }
    },
    "services": {
        "kucoin": {
            "url": "https://api.kucoin.com/api/v1/market/allTickers",
            "responseType": "json",
            "pairs": [
                "BTC-USDC",
                "LTC-USDC",
                "LINK-USDC",
                "SOL-USDC"
            ]
        },
        "weather": {
            "url": "https://api.openweathermap.org/data/2.5/weather?units=metric",
            "responseType": "json",
            "params": {
                "q": "Mogilev",
                "lang": "be",
                "appid": "${OPENWEATHERMAP_API_KEY}"
            },
            "refreshInterval": 600000,
            "data": {
                "temp": {
                    "path": "main.temp",
                    "type": "float",
                    "round": 2
                },
                "feels_like": {
                    "path": "main.feels_like",
                    "type": "float",
                    "round": 2
                },
                "humidity": {
                    "path": "main.humidity",
                    "type": "int"
                },
                "pressure": {
                    "path": "main.pressure",
                    "type": "int"
                },
                "wind_speed": {
                    "path": "wind.speed",
                    "type": "float",
                    "round": 2
                },
                "wind_deg": {
                    "path": "wind.deg",
                    "type": "int"
                },
                "clouds": {
                    "path": "clouds.all",
                    "type": "int"
                },
                "description": {
                    "path": "weather[0].description",
                    "type": "string"
                }
            }
        },
        "sensors1": {
            "url": "http://192.168.0.106/sensors",
            "responseType": "text",
            "refreshInterval": 600000,
            "data": {
                "dsw1": {
                    "path": "dsw1",
                    "type": "float",
                    "round": 2
                },
                "dsw2": {
                    "path": "dsw2",
                    "type": "float",
                    "round": 2
                }
            }
        },
        "sensors2": {
            "url": "http://192.168.0.100/sensors",
            "responseType": "text",
            "refreshInterval": 600000,
            "data": {
                "bmpt": {
                    "path": "bmpt",
                    "type": "float",
                    "round": 2
                },
                "bmpp": {
                    "path": "bmpp",
                    "type": "float",
                    "round": 2
                }
            }
        }
    },
    "dashboard": {
        "lines": [
            {
                "type": "datetime",
                "startY": 0,
                "format": "%a - %d %b - %H:%M",
                "font": "font24",
                "colour": "RED"
            },
            {
                "type": "sun_times",
                "startY": 25,
                "font": "font18",
                "colour": "BLACK",
                "fallbackText": "Sun times: N/A",
                "fallbackColour": "RED"
            },
            {
                "type": "weather_sensors",
                "startY": 47,
                "items": [
                    {
                        "label": "Out, °C:",
                        "sensorKey": "dsw1",
                        "valueFont": "font24",
                        "valueColour": "RED",
                        "weatherText": " feels {feels_like} - {temp}",
                        "weatherFont": "font18",
                        "weatherColour": "BLACK"
                    }
                ]
            },
            {
                "type": "weather_details",
                "startY": 69,
                "items": [
                    {
                        "label": "Hum, %:",
                        "key": "humidity",
                        "font": "font18",
                        "colour": "YELLOW"
                    },
                    {
                        "label": "Wind, ms: {wind_speed}  {wind_direction}",
                        "font": "font18",
                        "colour": "BLACK"
                    }
                ]
            },
            {
                "type": "pressure_clouds",
                "startY": 91,
                "items": [
                    {
                        "label": "Press, hPa:",
                        "sensorKey": "bmpp",
                        "valueFont": "font24",
                        "valueColour": "RED"
                    },
                    {
                        "label": "Вобл, %: {clouds}",
                        "font": "font18",
                        "colour": "BLACK"
                    }
                ]
            },
            {
                "type": "balcony_bk_temps",
                "startY": 113,
                "items": [
                    {
                        "label": "Bal, °C:",
                        "sensorKey": "dsw2",
                        "font": "font18",
                        "colour": "RED"
                    },
                    {
                        "label": "BK, °C:",
                        "sensorKey": "bmpt",
                        "font": "font18",
                        "colour": "RED"
                    }
                ]
            },
            {
                "type": "crypto_prices",
                "startY": 135,
                "font": "font18",
                "pairs": ["BTC-USDC", "LTC-USDC", "LINK-USDC"],
                "fallbackText": "Crypto: Offline",
                "fallbackColour": "RED"
            }
        ]
    }
}